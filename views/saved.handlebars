<div class="container">
  {{#each savedData}}
    <ul class="timeline">
        <li>
          <div class="timeline-badge delete">
            <form action='/saved/article/{{this.id}}?_method=DELETE' method="POST">
              <button type='submit' style="color: #d9534f" class="glyphicon glyphicon-remove"></button>
            </form>  
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4 class="timeline-title">{{this.title}}</h4>
              <p><small class="text-muted"><i class="glyphicon glyphicon-user"></i> {{this.author}}  <i class="glyphicon glyphicon-time"></i> {{this.date}}</small></p>
            </div>
            <div class="timeline-body">
              <p>{{this.summary}}  <a href="{{this.link}}">Read more..</a></p>
            </div>
          </div>
        </li>
    </ul>
    {{/each}}
</div>